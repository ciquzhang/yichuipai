<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f4f4f4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主播"
                android:textSize="18dp"
                android:textColor="#333333"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/anchor_task_return"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_return_g"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/anchor_task_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="往日任务"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:textSize="16dp"
                android:textColor="#00b589"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff">
                    <ImageView
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#00b589"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日任务"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/anchor_today_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eeeeee"/>

                    <ImageView
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="#00b589"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未来任务"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/anchor_future_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/anchor_task_to_live"
                android:layout_width="142dp"
                android:layout_height="50dp"
                android:background="@drawable/anchor_task_bottom_shape"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:id="@+id/anchor_task_live_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:src="@mipmap/icon_tolive"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="18dp"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@+id/anchor_task_live_img"
                    android:layout_marginLeft="10dp"
                    android:text="生活直播"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>
