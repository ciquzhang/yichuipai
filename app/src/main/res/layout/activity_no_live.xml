<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBg">

        <com.my.view.CarouselFigureView
            android:id="@+id/no_live_fv"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:isAutoPlay="true"
            app:isInfiniteLoop="true"
            app:isNeedIndicationPoint="true"
            app:playIntervalTime="3000"
            app:pointBottomMargin="3dp"
            app:pointLeft_Right_Margin="5dp" />

        <android.support.design.widget.TabLayout
            android:id="@+id/no_live_tab"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            app:tabTextColor="#333333"
            android:textSize="14dp"
            app:tabIndicatorColor="#00B589"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="#00B589">
        </android.support.design.widget.TabLayout>

        <com.baichao.yichuipai.view.NoScrollViewPager
            android:id="@+id/no_live_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.baichao.yichuipai.view.NoScrollViewPager>
    </LinearLayout>
</layout>
