<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4">
        <RelativeLayout
            android:id="@+id/frag_my_login"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="#00b589">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/frag_my_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#ffffff"
                android:src="@drawable/touxiang"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/frag_my_img"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/frag_my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="未登录"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/frag_my_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:text="个人信息"
                    android:textColor="#CCF0E7"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_goin_w"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frag_my_attention"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/frag_my_icon_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_my_attention"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/frag_my_icon_1"
                android:layout_centerVertical="true"
                android:textSize="16dp"
                android:text="关注"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/frag_my_img_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_goin_g"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/frag_my_img_1"
                android:layout_marginRight="6dp"
                android:textColor="#999999"
                android:textSize="14dp"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/frag_my_ordinary"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/frag_my_approve_person"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/frag_my_icon_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_my_personal_certificate"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/frag_my_icon_2"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:text="实名认证"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/frag_my_tv_approve_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/frag_my_img_2"
                    android:layout_marginRight="6dp"
                    android:textColor="#999999"
                    android:text="未认证"
                    android:textSize="14dp"/>

                <ImageView
                    android:id="@+id/frag_my_img_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_goin_g"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eeeeee"
                android:layout_marginLeft="10dp"/>

            <RelativeLayout
                android:id="@+id/frag_my_approve_company"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/frag_my_icon_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_my_enterprise_certification"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/frag_my_icon_3"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:text="企业认证"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/frag_my_tv_approve_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/frag_my_img_3"
                    android:layout_marginRight="6dp"
                    android:textColor="#999999"
                    android:text="未认证"
                    android:textSize="14dp"/>

                <ImageView
                    android:id="@+id/frag_my_img_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_goin_g"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frag_my_anchor"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#ffffff">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/frag_my_anchor_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_my_anchor"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:text="主播任务"
                    android:textColor="#7c48c3"
                    android:layout_toRightOf="@+id/frag_my_anchor_1"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_goin_g"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eeeeee"
                android:layout_marginLeft="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/frag_my_anchor_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_my_fans"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/frag_my_anchor_2"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:text="粉丝"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/frag_my_anchor_right"
                    android:layout_marginRight="6dp"
                    android:textColor="#999999"
                    android:text="0"
                    android:textSize="14dp"/>

                <ImageView
                    android:id="@+id/frag_my_anchor_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_goin_g"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eeeeee"
                android:layout_marginLeft="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/frag_my_anchor_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_my_attention"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/frag_my_anchor_3"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:text="关注"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/frag_my_anchor_right_1"
                    android:layout_marginRight="6dp"
                    android:textColor="#999999"
                    android:text="0"
                    android:textSize="14dp"/>

                <ImageView
                    android:id="@+id/frag_my_anchor_right_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_goin_g"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/frag_my_wallet"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/frag_my_icon_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_my_wallet"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/frag_my_icon_4"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:text="钱包"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/frag_my_img_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_goin_g"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eeeeee"
                android:layout_marginLeft="10dp"/>

            <RelativeLayout
                android:id="@+id/frag_my_safe"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/frag_my_icon_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_my_safety"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/frag_my_icon_5"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:text="安全性"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/frag_my_img_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_goin_g"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/frag_my_setting"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/frag_my_icon_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_my_set"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/frag_my_icon_6"
                android:layout_centerVertical="true"
                android:textSize="16dp"
                android:text="设置"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/frag_my_img_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_goin_g"/>

        </RelativeLayout>
    </LinearLayout>
</layout>
