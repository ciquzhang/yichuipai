<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>

    <com.zhy.autolayout.AutoLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px">
            <ImageView
                android:id="@+id/info_change_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_return_g"
                android:layout_marginLeft="20px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="账户资料"
                android:textSize="36px"
                android:textColor="#333333"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#dddddd"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/info_change_image"
            android:layout_width="match_parent"
            android:layout_marginTop="20px"
            android:layout_height="160px"
            android:background="#ffffff">
            <TextView
                android:layout_width="230px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="32px"
                android:text="头像"
                android:textColor="#333333"
                android:paddingLeft="24px"/>

            <com.baichao.yichuipai.view.RoundImageView
                android:id="@+id/information_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="66px"
                android:layout_marginRight="20px"
                android:background="@drawable/touxiang"
                android:src="@drawable/user_icon"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="356px"
            android:layout_marginTop="20px"
            android:background="#ffffff"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/info_change_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="32px"
                    android:text="昵称"
                    android:textColor="#333333"
                    android:paddingLeft="24px"/>

                <ImageView
                    android:id="@+id/frag_my_img_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/icon_goin_g"/>

                <TextView
                    android:id="@+id/information_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/frag_my_img_2"
                    android:layout_marginRight="12px"
                    android:textColor="#999999"
                    android:textSize="28px"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#eeeeee"
                android:layout_marginLeft="20px"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/info_change_gender"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:textSize="32px"
                    android:layout_centerVertical="true"
                    android:text="性别"
                    android:textColor="#333333"
                    android:paddingLeft="24px" />

                <ImageView
                    android:id="@+id/frag_my_img_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/icon_goin_g"/>

                <TextView
                    android:id="@+id/information_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/frag_my_img_3"
                    android:layout_marginRight="12px"
                    android:textColor="#999999"
                    android:textSize="28px"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#eeeeee"
                android:layout_marginLeft="20px"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/info_change_birthday"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="32px"
                    android:text="出生日期"
                    android:layout_gravity="center_vertical"
                    android:textColor="#333333"
                    android:paddingLeft="24px"/>

                <ImageView
                    android:id="@+id/frag_my_img_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/icon_goin_g"/>

                <TextView
                    android:id="@+id/information_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/frag_my_img_4"
                    android:layout_marginRight="12px"
                    android:textColor="#999999"
                    android:textSize="28px"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#eeeeee"
                android:layout_marginLeft="20px"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/info_change_personalized"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="32px"
                    android:text="个性签名"
                    android:layout_gravity="center_vertical"
                    android:textColor="#333333"
                    android:paddingLeft="24px"/>

                <ImageView
                    android:id="@+id/frag_my_img_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/icon_goin_g"/>

                <TextView
                    android:id="@+id/information_personalized"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/frag_my_img_5"
                    android:layout_marginRight="12px"
                    android:textColor="#999999"
                    android:textSize="28px"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="356px"
            android:background="#ffffff"
            android:layout_marginTop="20px"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/info_change_phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/frag_my_img_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/icon_goin_g"/>

                <TextView
                    android:id="@+id/information_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/frag_my_img_1"
                    android:layout_marginRight="12px"
                    android:textColor="#999999"
                    android:textSize="28px"/>

                <TextView
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:textSize="32px"
                    android:text="联系电话"
                    android:layout_centerVertical="true"
                    android:textColor="#333333"
                    android:paddingLeft="24px"
                    android:layout_alignBottom="@+id/information_name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#eeeeee"
                android:layout_marginLeft="20px"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/info_change_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:textSize="32px"
                    android:layout_centerVertical="true"
                    android:text="联系邮箱"
                    android:textColor="#333333"
                    android:paddingLeft="24px" />

                <ImageView
                    android:id="@+id/frag_my_img_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/icon_goin_g"/>

                <TextView
                    android:id="@+id/information_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/frag_my_img_6"
                    android:layout_marginRight="12px"
                    android:textColor="#999999"
                    android:textSize="28px"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#eeeeee"
                android:layout_marginLeft="20px"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/info_change_area"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="32px"
                    android:text="所在地区"
                    android:layout_gravity="center_vertical"
                    android:textColor="#333333"
                    android:paddingLeft="24px"/>

                <ImageView
                    android:id="@+id/frag_my_img_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/icon_goin_g"/>

                <TextView
                    android:id="@+id/information_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/frag_my_img_7"
                    android:layout_marginRight="12px"
                    android:textColor="#999999"
                    android:textSize="28px"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#eeeeee"
                android:layout_marginLeft="20px"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/info_change_street"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="230px"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="32px"
                    android:text="所在街道"
                    android:layout_gravity="center_vertical"
                    android:textColor="#333333"
                    android:paddingLeft="24px"/>

                <ImageView
                    android:id="@+id/frag_my_img_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/icon_goin_g"/>

                <TextView
                    android:id="@+id/information_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/frag_my_img_8"
                    android:layout_marginRight="12px"
                    android:textColor="#999999"
                    android:textSize="28px"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</layout>
