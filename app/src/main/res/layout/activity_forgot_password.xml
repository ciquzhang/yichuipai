<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/activity_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px">
            <ImageView
                android:id="@+id/forgot_password_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_return_g"
                android:layout_marginLeft="20px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="修改密码"
                android:textColor="#333333"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#dddddd"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通过验证绑定手机修改密码"
            android:layout_marginLeft="20px"
            android:layout_marginTop="18px"
            android:textSize="28px"
            android:textColor="#666666"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="176px"
            android:background="#ffffff"
            android:layout_marginTop="8px"
            android:orientation="vertical">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/forgot_password_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入绑定的手机号"
                    android:textSize="32px"
                    android:paddingLeft="20px"
                    android:background="@null"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#dddddd"
                android:layout_marginLeft="20px"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/forgot_password_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="输入收到的验证码"
                    android:textSize="32px"
                    android:paddingLeft="20px"
                    android:background="@null"/>

                <TextView
                    android:layout_width="256px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <EditText
            android:id="@+id/forgot_password_password"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="#ffffff"
            android:layout_marginTop="20px"
            android:paddingLeft="20px"
            android:textSize="32px"
            android:hint="设置新密码"/>
        
        <Button
            android:id="@+id/forgot_password_commit"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="40px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:textColor="#ffffff"
            android:text="确认修改"
            android:textSize="32px"
            android:background="@drawable/forgot_btn_shape"/>

        <TextView
            android:id="@+id/forgot_password_to_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通过绑定邮箱修改"
            android:textColor="#00b589"
            android:layout_marginTop="30px"
            android:layout_gravity="center_horizontal"/>
    </com.zhy.autolayout.AutoLinearLayout>
</layout>
