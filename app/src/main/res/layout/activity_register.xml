<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>

    <com.zhy.autolayout.AutoRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/register_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:foregroundGravity="top"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="88px">
                <ImageView
                    android:id="@+id/register_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:src="@mipmap/icon_return_g"/>

            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textSize="72px"
                android:layout_gravity="right"
                android:layout_marginRight="40px"
                android:layout_marginTop="112px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="注册一个属于您的账户，体验更多的服务"
                android:layout_marginTop="30px"
                android:layout_marginRight="40px"
                android:textColor="#999999"
                android:maxEms="13"
                android:textSize="28px"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="360px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="@drawable/login_ed_shape"
                android:orientation="vertical"
                android:layout_marginTop="160px">
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/register_phone"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:hint="您的手机号"
                        android:textColor="#999999"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:textSize="32px"
                        android:paddingLeft="60px"
                        android:background="@null"/>

                    <ImageView
                        android:layout_width="2px"
                        android:layout_height="32px"
                        android:background="#f1f1f1"
                        android:layout_gravity="center_vertical"/>

                    <com.baichao.yichuipai.view.TimeButton
                        android:id="@+id/register_get_code"
                        android:layout_width="256px"
                        android:layout_height="match_parent"
                        android:text="获取验证码"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="32px"
                        android:background="@null"
                        android:textColor="#00b589"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f1f1f1"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/register_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="收到的验证码"
                        android:textColor="#999999"
                        android:inputType="number"
                        android:textSize="32px"
                        android:paddingLeft="60px"
                        android:background="@null"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#f1f1f1"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/register_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="设置登录密码"
                        android:textColor="#999999"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:textSize="32px"
                        android:paddingLeft="60px"
                        android:background="@null"/>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/register_commit"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:text="确认注册"
                    android:textSize="36px"
                    android:textColor="#00b589"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="80px"
                    android:background="@drawable/login_btn_shape"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</layout>

