<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f4f4f4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/deposit_detailed_top_shape">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="押金详情"
                android:textSize="18dp"
                android:textColor="#333333"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/deposit_detailed_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_return_g"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退押金"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#00b589"
                android:textSize="16dp"
                android:layout_marginRight="8dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/deposit_detailed_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="押金总额"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#999999"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/deposit_detailed_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥55555"
                        android:textColor="#151515"
                        android:layout_toRightOf="@+id/deposit_detailed_tv"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/deposit_detailed_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="冻结"
                        android:textSize="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:textColor="#00b589"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#eeeeee"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="#999999"
                        android:layout_centerVertical="true"
                        android:text="拍卖场地"/>

                    <TextView
                        android:id="@+id/deposit_detailed_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昆明市"
                        android:textSize="14dp"
                        android:textColor="#999999"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="#999999"
                        android:layout_centerVertical="true"
                        android:text="充值时间"/>

                    <TextView
                        android:id="@+id/deposit_detailed_creat_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2015.8.4"
                        android:textSize="14dp"
                        android:textColor="#999999"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="#999999"
                        android:layout_centerVertical="true"
                        android:text="可提现时间"/>

                    <TextView
                        android:id="@+id/deposit_detailed_thaw_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016.1.2"
                        android:textSize="14dp"
                        android:textColor="#999999"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已压房屋"
            android:layout_marginTop="8dp"
            android:textColor="#666666"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"/>

        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/deposit_detailed_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:recyclerClipToPadding="true"
            app:layout_progress="@layout/view_progress"
            app:layout_error="@layout/view_error"
            app:scrollbarStyle="insideOverlay"
            app:layout_empty="@layout/view_empty"
            android:layout_marginTop="5dp"
            app:scrollbars="none" >
        </com.jude.easyrecyclerview.EasyRecyclerView>
    </LinearLayout>
</layout>
